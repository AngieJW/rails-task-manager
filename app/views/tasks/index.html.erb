<h1 class="h1">My tasks</h1>
<div class="container">
<ul class="list-group"><% @tasks.each do |task| %>
<li class="list-group-item list-group-item-action">
<%= link_to task.title, task_path(task) %></li>
<% end %></ul></div>

<div type="button" class="btn btn-info"><%= link_to "Create a new task", new_task_path %></div>
