<div class="container"><div class="card">
  <div class="card-body">
  <h1 class="card-title"><%= @task.title %> </h1>

<p class="card-text"><%= @task.details %></p>

<% if @task.completed %>
<i class="fa-solid fa-square-check"></i><%= "This task is completed"  %>
<% else %>
<i class="fa-regular fa-circle"></i><%= "This task is not completed yet" %>
<% end %>
<br>
</div></div></div>
<div type="button" class="btn btn-info"><%= link_to "Back to list", tasks_path %></div>
<div class="btn btn-warning"><%= link_to "Edit this task", edit_task_path %></div>
<div class="btn btn-danger"><%= link_to "Delete this task", task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?"} %></div>
